<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey"
    android:clickable="true"
    tools:context="com.accordhk.SnapNEat.fragments.AboutFragment">

    <include layout="@layout/actionbar_back_title"
        android:id="@+id/inc_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/inc_action_bar"
        android:orientation="vertical"
        android:divider="@drawable/lv_horizontal_divider"
        android:dividerPadding="1dp"
        android:showDividers="middle"
        android:layout_marginTop="@dimen/fab_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin">

            <com.accordhk.SnapNEat.utils.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tv_version_lbl"
                android:textSize="@dimen/font_28"
                android:textColor="@color/colorGrey"
                android:text="@string/a10_version_number"
                />

            <com.accordhk.SnapNEat.utils.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_version_value"
                android:textSize="@dimen/font_24"
                android:textColor="@color/commonLabel"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_disclaimer_row"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin">

            <com.accordhk.SnapNEat.utils.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tv_disclaimer_lbl"
                android:textSize="@dimen/font_28"
                android:textColor="@color/colorGrey"
                android:text="@string/a10_disclaimer"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/btn_disclaimer"
                android:src="@drawable/s12_btn_show_more"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
