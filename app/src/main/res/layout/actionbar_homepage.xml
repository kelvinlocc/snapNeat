<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="35dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_menu"
            android:background="#0000"
            android:src="@drawable/btn_menu"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitStart"
            android:layout_marginRight="15dp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search"
            android:background="#0000"
            android:layout_toRightOf="@id/btn_menu"
            android:src="@drawable/icon_search_white"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_by_distance"
            android:background="#0000"
            android:layout_toRightOf="@id/btn_search"
            android:src="@drawable/distance2"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <!--<ToggleButton-->
            <!--android:layout_width="33dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:id="@+id/btn_by_location"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:button="@drawable/btn_location_white"-->
            <!--android:textOff=""-->
            <!--android:textOn=""-->
            <!--android:focusableInTouchMode="false"-->
            <!--android:layout_toRightOf="@id/btn_by_distance"-->
            <!--android:paddingRight="@dimen/menu_btn_padding_right"-->
            <!--android:layout_centerVertical="true" />-->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_by_location"
            android:background="#0000"
            android:src="@drawable/btn_location_white"
            android:layout_toRightOf="@id/btn_by_distance"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:src="@drawable/logow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
