<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context="com.accordhk.SnapNEat.fragments.RestaurantListFragment">

    <include layout="@layout/actionbar_restaurant" />

    <com.accordhk.SnapNEat.utils.CustomFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tv_search"
        android:layout_margin="@dimen/fab_margin"
        android:drawableLeft="@drawable/s2_icon_search"
        android:maxLines="1"
        android:padding="@dimen/tv_search_padding"
        android:id="@+id/et_resto_search"
        android:singleLine="true"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_24"
        android:textCursorDrawable="@null"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_resto"/>

</LinearLayout>
