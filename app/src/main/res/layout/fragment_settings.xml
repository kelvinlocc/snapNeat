<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey"
    android:clickable="true"
    tools:context="com.accordhk.SnapNEat.fragments.SettingsFragment">

    <include layout="@layout/actionbar_back_title"
        android:id="@+id/inc_action_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_action_bar"
        android:id="@+id/rl_logged_in">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/lv_horizontal_divider"
            android:dividerPadding="1dp"
            android:showDividers="middle"
            android:id="@+id/ll_logged_in">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:padding="@dimen/fab_margin"
                android:id="@+id/ll_my_account"
                android:clickable="true"
                android:background="@android:color/white">

                <com.accordhk.SnapNEat.utils.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_28"
                    android:id="@+id/tv_my_account_lbl"
                    android:layout_weight="1"
                    android:text="@string/a6_my_account" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_my_account"
                    android:src="@drawable/s12_btn_show_more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fab_margin"
                android:id="@+id/ll_connected_services"
                android:clickable="true"
                android:background="@android:color/white">

                <com.accordhk.SnapNEat.utils.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_28"
                    android:id="@+id/tv_con_services_lbl"
                    android:layout_weight="1"
                    android:text="@string/a6_connected_services" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_con_services"
                    android:src="@drawable/s12_btn_show_more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fab_margin"
                android:id="@+id/ll_language1"
                android:clickable="true"
                android:background="@android:color/white">

                <com.accordhk.SnapNEat.utils.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_28"
                    android:id="@+id/tv_language_lbl1"
                    android:layout_weight="1"
                    android:text="@string/a6_language" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_language1"
                    android:src="@drawable/s12_btn_show_more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:padding="@dimen/fab_margin"
                android:id="@+id/ll_about1"
                android:clickable="true"
                android:background="@android:color/white">

                <com.accordhk.SnapNEat.utils.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_28"
                    android:id="@+id/tv_about_lbl1"
                    android:layout_weight="1"
                    android:text="@string/a6_about" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_about1"
                    android:src="@drawable/s12_btn_show_more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fab_margin"
                android:id="@+id/ll_password_row"
                android:background="@android:color/white">

                <com.accordhk.SnapNEat.utils.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_28"
                    android:id="@+id/tv_change_pass_lbl"
                    android:layout_weight="1"
                    android:text="@string/a6_change_password" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_change_pass"
                    android:src="@drawable/s12_btn_show_more"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_logout"
            android:id="@+id/btn_logout"
            android:textAllCaps="false"
            android:text="@string/a6_logout"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_32"
            android:layout_below="@+id/ll_logged_in"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_action_bar"
        android:id="@+id/rl_guest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/lv_horizontal_divider"
            android:dividerPadding="1dp"
            android:showDividers="middle"
            android:id="@+id/ll_guest">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:padding="@dimen/fab_margin"
                android:id="@+id/ll_language2"
                android:clickable="true"
                android:background="@android:color/white">

                <com.accordhk.SnapNEat.utils.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_28"
                    android:id="@+id/tv_language_lbl2"
                    android:layout_weight="1"
                    android:text="@string/a6_language" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_language2"
                    android:src="@drawable/s12_btn_show_more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fab_margin"
                android:id="@+id/ll_about2"
                android:clickable="true"
                android:background="@android:color/white">

                <com.accordhk.SnapNEat.utils.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_28"
                    android:id="@+id/tv_about_lbl2"
                    android:layout_weight="1"
                    android:text="@string/a6_about" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_about2"
                    android:src="@drawable/s12_btn_show_more"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_profile_login"
            android:id="@+id/btn_login"
            android:text="@string/a6_login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_32"
            android:layout_below="@+id/ll_guest"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
