<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomNavigationViewStyle">
        <item name="android:textSize">@dimen/font_40</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">60dp</item><!-- menu item height-->
    </style>

    <style name="CustomEditTextWhite">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#f9eab7</item>
        <item name="colorControlActivated">#f9eab7</item>
        <item name="colorControlHighlight">#f9eab7</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:singleLine">true</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="CustomEditTextWhite2">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="colorControlHighlight">#FFF</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

</resources>
